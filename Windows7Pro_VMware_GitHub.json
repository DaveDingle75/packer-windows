{
  "builders": [
    {
      "type": "vmware-iso",
	  "vm_name": "W7PRO_TRUNK",
	  "output_directory": "output-PCKR_W7PRO_TRUNK",
	  "version": 8,
	  "disk_type_id": "thin",
      "remote_type": "esx5",
      "remote_host": "<Host IP>",
      "remote_datastore": "DEV1",
      "remote_username": "root",
      "remote_password": "<Root Pass>",
      "keep_registered": true,
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "headless": false,
      "boot_wait": "1m",
      "communicator": "winrm",
	  "winrm_use_ssl": "false",
	  "winrm_insecure": "true",
      "winrm_username": "<WinRM User>",
      "winrm_password": "<WinRM Pass>",
      "winrm_port": "5985",
      "winrm_timeout": "1h",
      "shutdown_command": "C:/windows/system32/sysprep/sysprep.exe /generalize /oobe /quiet /shutdown",
      "guest_os_type": "windows7-64",
      "tools_upload_flavor": "windows",
	  "disk_size": "{{user `disk_size`}}",
      "vnc_disable_password": true,
      "floppy_files": [
        "./scripts/autounattend.xml",
        "./scripts/Disable-WindowsUpdates.ps1",
		"./scripts/Enable_WinRM_v3.ps1"
      ],
      "vmx_data": {
        "ethernet0.networkName": "VM Network",
		    "memsize": "2048",
		    "numvcpus": "2",
		    "scsi0.virtualDev": "lsisas1068",
		    "virtualhw.version": "8"
      }
    }
    ],
  "provisioners": [
    {
      "type": "shell",
	  "pause_before": "30s",
      "remote_path": "/tmp/script.bat",
      "execute_command": "{{.Vars}} cmd /c C:/Windows/Temp/script.bat",
      "scripts": [
		     "./scripts/Enable_RDP_v1.bat"
      ]
    }
  ],
    "variables": {
      "iso_url": "http://<Server IP>/Repository/ISOs/en_windows_7_professional_with_sp1_x64_dvd_u_676939.iso",
      "iso_checksum_type": "md5",
      "iso_checksum": "ED15956FE33C13642A6D2CB2C7AA9749",
	    "disk_size": "25600"
  }
}